<h1>Task list</h1>
<ul>

  <% @tasks.each do |task| %>

  <li>
    <%= link_to task.name, task_path(task) %> : <%= task.details %> (<%= task.state %>) <%= link_to "Edit", edit_task_path(task) %> / <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>

  <% end %>

  <%= link_to "New", new_task_path %>

</ul>
